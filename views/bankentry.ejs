  html{
    background-color: gray;
  }
body{
  background-color: grey;
}

  .root {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 100px;

    
  }

  .subdiv {
    width: 700px;
    margin-top: 5px;
    margin-bottom: 20px;
    
    background:white;
        padding: 20px;
   
  }

  .gap {
    padding: 7px;
  }

  .male {
    font-size: 40px;
    color: black;

  }

  .female {
    font-size: 40px;
    color: #e84393;
  }

  .aligncenter {

    display: flex;
    align-items: center;
    justify-content: center;
  }
